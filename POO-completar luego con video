Archivo - ArregloContacto.h

#pragma once
#include "Contacto.h"


class ArregloContaco {
private:
	// este arreglo sera del tipo que acabamos de definir en la anterior clase

	Contacto** arreglocontacto;
	int* N;
public:
	ArregloContaco(void);
	~ArregloContaco(void);

	void agregarContacto(Contacto* dato);
	Contacto* getContacto(int indice);
	Contacto** CrearArreglo();
	int getN();
};

//Implementacion de la clase

ArregloContaco::ArregloContaco(void) {
	arreglocontacto = NULL;
	N = new int;
	*N = 0;
}

ArregloContaco::~ArregloContaco(void) {
	for (int i = 0; i < *N; i++)
		delete arreglocontacto[i];

	delete N;
}


Archivo - Contacto.h

#pragma once

#include <string>

class Contacto {

private:
	char* nombre;
	int edad;

public:

	Contacto(void);
	~Contacto(void);

	void setNombre(char* nuevo_nombre);
	char* getNombre();
	void setEdad(int nueva_edad);
	int getEdad();

};


// Implementacion de la clase - construir cada uno de los metodos que eh 
// definido en mi clase

Contacto::Contacto() {
	this->edad = 0;
	this->nombre = new char[100];
}

Contacto::~Contacto() {
	delete[]nombre;
}

// setters
void Contacto::setEdad(int nueva_edad) {
	this->edad = nueva_edad;
	// otras opciones
	// edad = nueva_edad;
	// (*this).edad = nueva_edad;
}

int Contacto::getEdad() {
	return edad;
}

void Contacto::setNombre(char* nuevo_nombre) {
	strcpy(nombre, nuevo_nombre);
}

char* Contacto::getNombre() {
	return nombre;
}

