Archivo = Saludo.h

#pragma once
#include <iostream>
#include <string>
using namespace std;


class Saludo {
public:
	string nombre;
	string saludo;

	// constructor I
	Saludo(string a) {
		this->nombre = a;
		this->saludo = "Hola " + this->nombre;
		cout << this->saludo;
	}

	// constructor II

	Saludo() {
		this->saludo = "\nHola";
		cout << this->saludo << endl;
	}

};


Archivo - Saludo.cpp

#include "Saludar.h"
